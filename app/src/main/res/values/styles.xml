<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="rightToast">

        <item name="colorBackground">#78CD22</item>
        <item name="textColor">#121315</item>
        <item name="iconLeft">@drawable/ic_check_black_24dp</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">15dp</item>
    </style>
    <style name="wrongToast">
        <item name="android:background">#E4B058</item>
        <item name="textColor">#05180B</item>
        <item name="iconLeft">@drawable/ic_close_black_24dp</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">15dp</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
